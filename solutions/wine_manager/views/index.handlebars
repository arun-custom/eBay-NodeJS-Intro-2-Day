<div class="container">
	<div class="margin-top-20">
		<a href="#" data-toggle="modal" data-target="#add-wine-modal" class="btn btn-primary">Add New Wine</a>
	</div>
	{{#each wines}}
	<!--One Wine-->
	<div class="row margin-top-20 wine-container">
		<div class="col-sm-3">
			<img src="{{picture}}" class="img-responsive" />
		</div>
		<div class="col-sm-9">
			<div class="margin-top-20">
				<span class="bold">Name: </span><span>{{name}}</span>
			</div>
			<div>
				<span class="bold">Year: </span><span>{{year}}</span>
			</div>
			<div>
				<span class="bold">Grapes: </span><span>{{grapes}}</span>
			</div>
			<div>
				<span class="bold">Country: </span><span>{{country}}</span>
			</div>
			<div>
				<span class="bold">Region: </span><span>{{region}}</span>
			</div>
			<div>
				<span class="bold">Price: </span><span>{{price}}</span>
			</div>
			<div>
				<span class="bold">Description: </span>
			</div>
			<div class="margin-top-10">
				{{description}}
			</div>
			<div class="margin-top-20">
				<a href="/edit/{{id}}" class="btn btn-default">Edit Wine</a>
			</div>
		</div>
	</div>
	<!--/One Wine-->
	{{/each}}
</div>

<!--Add Wine Modal-->
<form method="POST" action="/new">
	<div id="add-wine-modal" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title">Add New Wine</h4>
				</div>
				<div class="modal-body">
					<div class="bold">
						Name
					</div>
					<div class="margin-top-20">
						<input type="text" class="form-control" name="wine[name]" />
					</div>
					<div class="bold margin-top-20">
						Year
					</div>
					<div class="margin-top-20">
						<input type="text" class="form-control" name="wine[year]" />
					</div>
					<div class="bold margin-top-20">
						Grapes
					</div>
					<div class="margin-top-20">
						<input type="text" class="form-control" name="wine[grapes]" />
					</div>
					<div class="bold margin-top-20">
						Country
					</div>
					<div class="margin-top-20">
						<input type="text" class="form-control" name="wine[country]" />
					</div>
					<div class="bold margin-top-20">
						Region
					</div>
					<div class="margin-top-20">
						<input type="text" class="form-control" name="wine[region]" />
					</div>
					<div class="bold margin-top-20">
						Price
					</div>
					<div class="margin-top-20">
						<input type="text" class="form-control" name="wine[price]" />
					</div>
					<div class="bold margin-top-20">
						Picture
					</div>
					<div class="margin-top-20">
						<input type="text" class="form-control" name="wine[picture]" />
					</div>
					<div class="bold margin-top-20">
						Description
					</div>
					<div class="margin-top-20">
						<textarea class="form-control" name="wine[description]"></textarea>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					<button type="submit" class="btn btn-primary">Save Wine</button>
				</div>
			</div><!-- /.modal-content -->
		</div><!-- /.modal-dialog -->
	</div><!-- /.modal -->
	<!--/Add Wine Modal-->
</form>